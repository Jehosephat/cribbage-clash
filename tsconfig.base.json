{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@cribbage-clash/rules": ["rules/src/index"],
      "@cribbage-clash/rules/*": ["rules/src/*"]
    }
  }
}
